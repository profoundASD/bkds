{
  "manifest_version": 3,
  "name": "BKDS Single Tab Manager",
  "version": "1.0",
  "description": "Ensures only the current tab remains open by closing others.",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Single Tab Manager"
  },
  "host_permissions": [
    "*://*/*"
  ]
}
