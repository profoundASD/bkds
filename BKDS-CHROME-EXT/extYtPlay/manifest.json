{
  "manifest_version": 3,
  "name": "YouTube AutoPlay",
  "version": "1.0",
  "description": "Automatically starts playing YouTube videos when you browse to them.",
  "permissions": [],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
