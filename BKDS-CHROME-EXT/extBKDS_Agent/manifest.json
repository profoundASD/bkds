{
    "manifest_version": 3,
    "name": "Page Launcher",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        {
            "resources": ["images/*"],
            "matches": ["*://*/*"]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "toolbar.css"
            ]
            ,"run_at": "document_end"

        }
        
    ],
    "commands": {
        "toggle-ui": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "MacCtrl+Shift+U"
            },
            "description": "Toggle the floating UI"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
    
}